{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["./current/*.js"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "CI": "true", "NODE_ENV": "test" },
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js",
      ]
    }
  ]
}
